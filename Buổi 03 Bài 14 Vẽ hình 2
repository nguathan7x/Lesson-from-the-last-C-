#include<iostream>
using namespace std;
int main()
{
	int n;
	cin >> n;
	for (int i = 1; i <= n; i++)
	{
		for (int j = n-i; j <n; j++)
		{
			cout << "*";
		}
		cout << '\n';
	}
	cout << '\n';
	for (int i =1; i <=n; i++)
	{
		for (int j = n-i+1; j >0; j--)
		{
			cout << "*";
		}
		cout << '\n';
	}
	for (int i = n; i >0 ; i--)
	{
		for (int j = n-i+1; j <= n; j++)
		{
			cout << " ";
		}
		for (int j = i; j <= n; j++)
		{
			cout << "*";
		}
		cout << '\n';
	}
	cout << '\n';
	for (int i = 1; i <=n; i++)
	{
		for (int j = n-i; j<n ; j++)
		{
			cout << " ";
		}
		for (int j = i; j <= n; j++)
		{
			cout << "*";
		}
		cout << '\n';
	}
	for (int i = 1; i <= n; i++)
	{
		for (int j = 1; j <= n; j++)
		{
			if (i == j || i == n || j == 1)
			{
				cout << "*";
			}
			else cout << " ";
		}
		cout << '\n';
	}
}
